<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>

<VBox alignment="TOP_LEFT" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.swe2.http_requester.HttpRequesterController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20">
         <Label text="URL:"/>
         <TextField promptText="Enter URL"/>
         <Button fx:id="primaryButton" text="Send" onAction="#sendRequest"/>
         <Label fx:id="requestStatus"/>
      </HBox>
      <VBox alignment="TOP_LEFT" spacing="10">
      <Label text="Parameters:"/>
         <TableView fx:id="table" layoutX="50.0" layoutY="50.0" maxHeight="400.0">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
               <TableColumn fx:id="name" prefWidth="150.0" text="Name" />
               <TableColumn fx:id="value" prefWidth="150.0" text="Value" />
            </columns>
            <items></items>
         </TableView>
      </VBox>

      <VBox alignment="TOP_LEFT" spacing="10">
         <Label text="Response:"/>
         <TextArea prefHeight="200.0" editable="false"/>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
